{# app/Resources/views/post.html.twig #}

{% extends 'default/default.html.twig' %}

{% block body %}

    <h3>{{ title }}</h3>

    {{ form_start(form) }}
        {{ form_errors(form) }}

        <div class="form-group">
        {{ form_label(form.title) }}
        {{ form_errors(form.title) }}
        {{ form_widget(form.title, {'attr': {'class': 'form-control input-lg'}}) }}
        </div>

        <div class="form-group">
        {{ form_label(form.summary) }}
        {{ form_errors(form.summary) }}
        {{ form_widget(form.summary, {'attr': {'class': 'form-control input-lg'}}) }}
        </div>

        <div class="form-group">
        {{ form_label(form.content) }}
        {{ form_errors(form.content) }}
        {{ form_widget(form.content, {'attr': {'class': 'form-control input-lg', 'rows':'15'}}) }}
        </div>

        <div class="form-group">
        {{ form_label(form.tags) }}
        {{ form_errors(form.tags) }}
        {{ form_widget(form.tags, {'attr': {'class': 'form-control input-lg'}}) }}
        </div>

        <div>
        {{ form_widget(form.save,{'attr': {'class': 'btn btn-default btn-lg'}}) }}
        </div>
    {{ form_end(form) }}

{% endblock %}